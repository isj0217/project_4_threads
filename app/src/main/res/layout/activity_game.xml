<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/kitchen_edit_with_closet_and_gas"
    android:orientation="vertical">

<!--    4 empty pots-->
    <ImageView
        android:id="@+id/pot_1"
        android:layout_gravity="start|center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:adjustViewBounds="true"
        android:layout_marginTop="45dp"
        android:layout_marginStart="25dp"
        android:src="@drawable/pot_empty" />
    <ImageView
        android:id="@+id/pot_2"
        android:layout_gravity="start|center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:adjustViewBounds="true"
        android:layout_marginTop="45dp"
        android:layout_marginStart="122dp"
        android:src="@drawable/pot_empty" />
    <ImageView
        android:id="@+id/pot_3"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:adjustViewBounds="true"
        android:layout_marginEnd="108dp"
        android:layout_marginTop="45dp"
        android:src="@drawable/pot_empty" />
    <ImageView
        android:id="@+id/pot_4"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:adjustViewBounds="true"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="45dp"

        android:src="@drawable/pot_empty" />

<!--    Ramens-->
    <ImageView
    android:id="@+id/ramen_1"
    android:layout_width="wrap_content"
    android:layout_height="30dp"
    android:layout_marginStart="30dp"
    android:layout_marginTop="55dp"
    android:adjustViewBounds="true"
    android:src="@drawable/dried_ramen_illust" />

    <ImageView
        android:id="@+id/ramen_2"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="55dp"
        android:adjustViewBounds="true"
        android:src="@drawable/dried_ramen_illust" />

    <ImageView
        android:id="@+id/ramen_3"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="55dp"
        android:adjustViewBounds="true"
        android:src="@drawable/dried_ramen_illust" />

    <ImageView
        android:id="@+id/ramen_4"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="45dp"
        android:adjustViewBounds="true"
        android:src="@drawable/dried_ramen_illust" />

    <ImageView
        android:id="@+id/ramen_5"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="45dp"
        android:adjustViewBounds="true"
        android:src="@drawable/dried_ramen_illust" />

    <ImageView
        android:id="@+id/ramen_6"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="35dp"
        android:adjustViewBounds="true"
        android:src="@drawable/dried_ramen_illust" />


<!--    Eggs-->
    <ImageView
        android:id="@+id/egg_1"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="30dp"
        android:adjustViewBounds="true"
        android:rotation="300"
        android:src="@drawable/eggs" />

    <ImageView
        android:id="@+id/egg_2"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="60dp"
        android:adjustViewBounds="true"
        android:rotation="340"
        android:src="@drawable/eggs" />

    <ImageView
        android:id="@+id/egg_3"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="120dp"
        android:adjustViewBounds="true"
        android:rotation="150"
        android:src="@drawable/eggs" />


<!--    Ramen Powder packs-->
    <ImageView
        android:id="@+id/powder_1"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="start|center_vertical"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="50dp"
        android:adjustViewBounds="true"
        android:src="@drawable/ramen_powder_illust" />

    <ImageView
        android:id="@+id/powder_2"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="start|center_vertical"
        android:layout_marginStart="70dp"
        android:layout_marginBottom="50dp"
        android:rotation="300"
        android:adjustViewBounds="true"
        android:src="@drawable/ramen_powder_illust" />

    <ImageView
        android:id="@+id/powder_3"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="start|center_vertical"
        android:layout_marginStart="110dp"
        android:layout_marginBottom="50dp"
        android:rotation="60"
        android:adjustViewBounds="true"
        android:src="@drawable/ramen_powder_illust" />

    <ImageView
        android:id="@+id/powder_4"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="start|center_vertical"
        android:layout_marginStart="150dp"
        android:layout_marginBottom="50dp"
        android:rotation="40"
        android:adjustViewBounds="true"
        android:src="@drawable/ramen_powder_illust" />


<!--    Water bottles-->

    <ImageView
        android:id="@+id/water_1"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginBottom="60dp"
        android:adjustViewBounds="true"
        android:src="@drawable/water_transparent" />

    <ImageView
        android:id="@+id/water_2"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginBottom="65dp"
        android:layout_marginEnd="30dp"
        android:adjustViewBounds="true"
        android:src="@drawable/water_transparent" />

    <ImageView
        android:id="@+id/water_3"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginBottom="60dp"
        android:layout_marginEnd="60dp"
        android:adjustViewBounds="true"
        android:src="@drawable/water_transparent" />

    <ImageView
        android:id="@+id/water_4"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginBottom="65dp"
        android:layout_marginEnd="90dp"
        android:adjustViewBounds="true"
        android:src="@drawable/water_transparent" />

    <ImageView
        android:id="@+id/water_5"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginBottom="60dp"
        android:layout_marginEnd="120dp"
        android:adjustViewBounds="true"
        android:src="@drawable/water_transparent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp">

        <TextView
            android:id="@+id/tv_game_timer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="@drawable/btn_start"
            android:text="남은 시간: "
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_game_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_start"
            android:text="현재 금액: "
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="60dp">

        <Button
            android:id="@+id/btn_sell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_sell"
            android:text="팔기"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_dump"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_sell"
            android:layout_marginStart="20dp"
            android:text="버리기"
            android:textSize="20sp" />

    </LinearLayout>

</FrameLayout>